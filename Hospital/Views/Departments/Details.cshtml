@model Department
<h1 style="background-color:white;text-align:center; color:darkgreen">
    Details
</h1>
<dl>
    <dt>ID</dt>
    <dd>@Model.Id</dd>
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Description</dt>
    <dd>@Model.Description</dd>
</dl>
<h3>Employees</h3>
<ul class="list-group">
    @foreach (var employee in  Model.Doctors)
    {
        <li class="list-group-item list-group-item-action" >
            @employee.FullName
        </li>
    }
</ul>

