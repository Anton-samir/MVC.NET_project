@model IEnumerable<Department>
<h1 style="background-color:white;color:darkgreen;text-align:center">
    Index Table Of Department 
</h1>
<a asp-controller="Departments" asp-action="GetCreateView" class="btn btn-success " >Create Now</a>
@if (Model.Count() > 0 ) {
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr><th>ID</th><th>Name</th><th>Description</th><th> </th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td> <a a asp-controller="Departments" asp-action="GetDetailsView"  asp-route-id="@item.Id" class="btn btn-success">Details</a> </td>
                    <td> <a a asp-controller="Departments" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> </td>
                    <td> <a a asp-controller="Departments" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-danger text-center text-danger ">There Is No Data.</div>
}
<a asp-controller="Home" asp-action="Index">Back to Department</a>

