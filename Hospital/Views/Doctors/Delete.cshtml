@model Doctor
<h1 class="alert alert-danger text-center display-3" style="background-color:white;color:darkgreen">
    Are you Sure You Want to Delete
</h1>
<div class="row">
    <div class="col-6">
<dl class="row">
    <dt class="col-4">@Html.DisplayNameFor(e=>e.Id)</dt>
    <dd class="col-8">@Model.Id</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.FullName)</dt>
    <dd class="col-8">@Html.DisplayFor(e=>e.FullName)</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.Postion)</dt>
    <dd class="col-8">@Model.Postion</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.Salary)</dt>
    <dd class="col-8">@Model.Salary</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.Bonus)</dt>
    <dd class="col-8">@Model.Bonus</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.PhoneNumber)</dt>
    <dd class="col-8">@Model.PhoneNumber</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.EmailAddress)</dt>
    <dd class="col-8">@Model.EmailAddress</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.Password)</dt>
    <dd class="col-8">@Model.Password</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.HiringDateTime)</dt>
    <dd class="col-8">@Model.HiringDateTime</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.BirthDate)</dt>
    <dd class="col-8">@Model.BirthDate</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.AttendanceTime)</dt>
    <dd class="col-8">@Model.AttendanceTime</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.LeavingTime)</dt>
    <dd class="col-8">@Model.LeavingTime</dd>
    <dt class="col-4">@Html.DisplayNameFor(e=>e.DepartmentId)</dt>
    <dd class="col-8">@Html.DisplayFor(e=>e.Department.Name)</dd>
    <dt class="col-2">@Html.DisplayNameFor(e=>e.ImageUrl)</dt>
    <dd class="col-10">@Html.DisplayFor(e=>e.ImageUrl)</dd>
</dl>
    </div>
<div class="col-6">
    <img src="@Model.ImageUrl" id="empimg" class="col-4" style="max-height:200px; padding:10px;" />
</div>
</div>
<form method="post" asp-controller="Doctors" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-controller="Doctors" asp-action="GetIndexView">Back to employee</a>
